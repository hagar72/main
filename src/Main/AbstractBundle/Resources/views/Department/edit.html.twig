{% extends "MainAbstractBundle::layout.html.twig" %}

{% block homeSlider %}{% endblock %}
{% block single_item %}{% endblock %}
{% block projects %}{% endblock %}
{% block container %}
    {{ parent() }}
    <div class="container">
        <h2 class="text-center">Department edit</h2>
        <div id="form">
            {{ form_start(edit_form, {'attr': { 'id': 'contact', 'class': 'clearfix'} }) }}
            <div class="col-md-6 col-lg-12 form-group">
                <div class="error">{{ form_errors(edit_form.department) }}</div>
                {{ form_widget(edit_form.department, { 'type': 'text', 'attr': {'placeholder': 'Department', 'class': 'form-control', 'id': 'department'} }) }}
            </div>

            <div class="col-md-6 col-lg-12 form-group">
                <div class="error">{{ form_errors(edit_form.emails) }}</div>
                {{ form_widget(edit_form.emails, { 'type': 'text', 'attr': {'placeholder': 'Emails', 'class': 'form-control', 'id': 'emails'} }) }}
                <span style='color:#555;'><i>Enter emails seperated by ;</i></span>
            </div>

            <div class="col-md-12">
                {{ form_widget(edit_form.submit, {'attr': { 'class': 'col-md-12 col-sm-12 col-xs-12 blue-btn' } }) }}
            </div>
            {{ form_end(edit_form) }}
        </div>
                
        <ul class="record_actions">
            <li><a href="{{ path('departments') }}">Back to the list</a></li>
            <li>{{ form(delete_form) }}</li>
        </ul>
    </div>
{% endblock %}
