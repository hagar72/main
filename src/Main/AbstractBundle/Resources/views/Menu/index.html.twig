{% extends "MainAbstractBundle::layout.html.twig" %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('bundles/mainabstract/css/colorbox.css') }}" media="all" rel="stylesheet" type="text/css">
{% endblock %}

{% block container %}
    {{ parent() }}    
    <div class="container">
        <h2 class="text-center">Menu list</h2>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th class="text-center no-head">Id</th>
                    <th class="middle">Link</th>
                    <th class="middle">Title</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td scope="row" width="10%" class="text-center no"><a href="{{ path('menu_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td class="middle">{{ entity.link }}</td>
                <td class="middle">{{ entity.title }}</td>
                <td><a href="{{ path('menu_edit', { 'id': entity.id }) }}">edit</a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <a class="blue-btn text-center button btn-block" href="{{ path('menu_new') }}">Create a new entry</a>
{% endblock %}

{% block homeSlider %}{% endblock %}
{% block single_item %}{% endblock %}
{% block projects %}{% endblock %}