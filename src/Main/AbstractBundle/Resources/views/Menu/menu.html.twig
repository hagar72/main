<header>
    {% if is_granted('ROLE_USER') %}
        {% include 'MainAbstractBundle:Menu:toolbar.html.twig' %}
    {% endif %}
    <div class="navbar navbar-default navbar-fixed-top" role="navigation" id="mainNav">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse"> <span class="sr-only">Toggle navigation</span> <span class="icon-bar"></span> <span class="icon-bar"></span> <span class="icon-bar"></span> </button>
                <a class="navbar-brand" href="{{ path('home') }}">
                    <img src="{{ asset('bundles/mainabstract/img/logo.png') }}" alt="logo" class="img-responsive">
                </a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav pull-right">
                    {% set currentPath = app.request.attributes.get('_route') %}
                    
                    <li class=""><a href="{{ path('home') }}" class="{% if currentPath == 'home' %}active{%endif%}">{{ 'Home'|trans }}</a></li>
                    <li class=""><a href="{{ path('about') }}" class="{% if currentPath == 'about' %}active{%endif%}">{{ 'About'|trans }}</a></li>
                    <li class=""><a href="{{ path('certificates') }}" class="{% if currentPath == 'certificates' %}active{%endif%}">{{ 'Certificates'|trans }}</a></li>
                    <li class=""><a href="{{ path('projects') }}" class="{% if currentPath == 'projects' %}active{%endif%}">{{ 'Projects'|trans }}</a></li>
                    <li class=""><a href="{{ path('contacts_new') }}" class="{% if currentPath == 'contacts_new' %}active{%endif%}">{{ 'Contact us'|trans }}</a></li>
                    {%if 'en' ==  app.session.get('_locale') %}
                        <li class="ar-lang"><a class="pull-right" href="{{ path('language_switch', { 'locale': 'ar'}) }}">العربية</a></li>
                    {% else %}
                        <li class="ar-lang"><a class="pull-right" href="{{ path('language_switch', { 'locale': 'en'}) }}">English</a></li>
                    {% endif %}
                </ul>
            </div>
            <!--/.nav-collapse --> 
        </div>
    </div>
</header>