<header>
    {% if is_granted('ROLE_USER') %}
        {% include 'MainAbstractBundle:Menu:toolbar.html.twig' %}
    {% endif %}
    <div class="navbar navbar-default navbar-fixed-top" role="navigation" id="mainNav">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse"> <span class="sr-only">Toggle navigation</span> <span class="icon-bar"></span> <span class="icon-bar"></span> <span class="icon-bar"></span> </button>
                <a class="navbar-brand" href="index.html">
                    <img src="{{ asset('bundles/mainabstract/img/logo.png') }}" alt="logo" class="img-responsive">
                </a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav pull-right">
                    {% if app.request.attributes.get('_route') == '' %}
                        {% set currentPath = 'home' %}
                    {% else %}
                        {% set currentPath = path(app.request.attributes.get('_route')) %}
                    {% endif %}
                    
                    {% set itemClass = '' %}
                    {% for entity in entities %}
                        {% if entity.link == 'contacts_new' %}
                            {% set itemClass = 'contact' %}
                        {% endif %}
                        <li class="{{ itemClass}}"><a href="{{ path(entity.link) }}" class="{% if currentPath == entity.link %}active{%endif%}">{{ entity.title|trans }}</a></li>
                    {% endfor %}
                    {%if 'en' ==  app.session.get('_locale') %}
                        <li class="ar-lang"><a class="pull-right" href="{{ path('language_switch', { 'locale': 'ar'}) }}">العربية</a></li>
                    {% else %}
                        <li class="ar-lang"><a class="pull-right" href="{{ path('language_switch', { 'locale': 'en'}) }}">English</a></li>
                    {% endif %}
                </ul>
            </div>
            <!--/.nav-collapse --> 
        </div>
    </div>
</header>