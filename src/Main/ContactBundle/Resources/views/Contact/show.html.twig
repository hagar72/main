{% extends "MainAbstractBundle::layout.html.twig" %}

{% block homeSlider %}{% endblock %}
{% block single_item %}{% endblock %}
{% block projects %}{% endblock %}

{% block container %}
    {{ parent() }}
    
    <h1>Contact</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Sender</th>
                <td>{{ entity.sender }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Subject</th>
                <td>{{ entity.subject }}</td>
            </tr>
            <tr>
                <th>Message</th>
                <td>{{ entity.message }}</td>
            </tr>
            <tr>
                <th>Department</th>
                <td>{{ entity.department.department }}</td>
            </tr>
            <tr>
                <th>Sent</th>
                <td>{{ entity.sent }}</td>
            </tr>
        </tbody>
    </table>

<ul class="record_actions">
    <li><a href="{{ path('contacts') }}">Back to the list</a></li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
