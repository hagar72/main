{% extends "MainUserBundle::layout.html.twig" %}

{% block fos_user_content %}
{% trans_default_domain 'FOSUserBundle' %}

<div class="container">
    <div id="form" class="registeration">
        <form action="{{ path('fos_user_resetting_send_email') }}" method="POST" class="clearfix fos_user_resetting_request">
            <div class="col-md-6 col-lg-12 form-group">
                {% if invalid_username is defined %}
                    <p>{{ 'resetting.request.invalid_username'|trans({'%username%': invalid_username}) }}</p>
                {% endif %}
                <label for="username">{{ 'resetting.request.username'|trans }}</label>
                <input type="text" id="username" name="username" required="required" class="form-control" />
            </div>

            <div class="col-md-12">
                <input type="submit" value="{{ 'resetting.request.submit'|trans }}" class="col-md-12 col-sm-12 col-xs-12 blue-btn" />
            </div>
        </form>
    </div>
</div>
{% endblock fos_user_content %}
