{% extends "MainUserBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    <div class="container">
        <h2 class="text-center">Login</h2>
        <div id="form">
            <form id="contact" class="clearfix" action="{{ path("fos_user_security_check") }}" method="post">

                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                <div class="form-group">
                    <label for="username" class="float-left">{{ 'security.login.username'|trans }}</label>
                    <input type="text" id="username" name="_username" value="{{ last_username }}" required="required"  class="form-control" />
                </div>              

                <div class="form-group">
                    <label for="password" class="float-left">{{ 'security.login.password'|trans }}</label>
                    <input type="password" id="password" name="_password" required="required"  class="form-control" />
                </div>
                <div class="form-group">
                    <input type="checkbox" id="remember_me" name="_remember_me"  class="float-left" value="on" />
                    <label for="remember_me" class="remember_me"  class="float-left">{{ 'security.login.remember_me'|trans }}</label>
                </div>
                <div class="col-md-12">
                    <button  id="_submit" name="_submit" type="submit" class="col-md-12 col-sm-12 col-xs-12 blue-btn">{{ 'security.login.submit'|trans }}</button>
                    <a href="{{ path('fos_user_resetting_request') }}">{{'Forgot password?'|trans}}</a>
                </div>
            </form>
        </div>
    <!--contact-form--> 
    </div>
</div><!--Container-->
{% endblock fos_user_content %}